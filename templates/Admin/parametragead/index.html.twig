{% block body %}


 
 <div class="row mt"> 
          <!--  DATE PICKERS -->
          {% for message in app.flashes('message') %}
            <div class="alert alert-warning" style="margin-top: 4px;width: 500px;margin-left: 300px;">
                <i class="fa fa-check" style="font-size: 28px;margin-top: -10px;"></i><p style="font-size: 17px;margin-left: 45px;margin-top: -26px;">{{ message }}</p>
            </div>
        {% endfor %}
          <div class="col-lg-12" style="width:652px;margin-left:278px;margin-top:18px;">
            <div class="form-panel">
              <form action="{{path('parametersmtp')}}" class="form-horizontal style-form">
              <div class="form-group" style="margin-top:13px;">
              <label style="color: black;font-size: 32px;margin-left: 96px;">Configuration serveur SMTP</label>
               </div>
                <div class="form-group" style="margin-top:13px;">
                  <label class="control-label col-md-3" style="font-size:15px;color:black">Email </label>
                  <div class="col-md-3 col-xs-11">
                    <input class="form-control form-control-inline" style="width:293px" size="16" type="text"  name="email" value="{{email}}" required autofocus>
                    
                  </div>
                </div>

                 <div class="form-group" >
                  <label class="control-label col-md-3" style="font-size:15px;color:black">Nom d'utilisateur</label>
                  <div class="col-md-3 col-xs-11">
                    <input class="form-control form-control-inline " size="16" type="text" style="width:293px" name="username"  value="{{username}}">
                    
                  </div> 
                </div>
                <div class="form-group" >
                  <label class="control-label col-md-3" style="font-size:15px;color:black">Mot de passe</label>
                  <div class="col-md-3 col-xs-11">
                    <input class="form-control form-control-inline " size="16" type="password" style="width:293px" name="password"  value="{{password}}">
                    
                  </div> 
                </div>
                
                
                  <div class="form-group">
                  <label class="control-label col-md-3" style="font-size:15px;color:black">Numero de port</label>
                  <div class="col-md-3 col-xs-11">
                    <input class="form-control form-control-inline " size="16" type="text" style="width:293px" name="port" value="{{port}}"required autofocus>
                    
                  </div> 
                </div> 
                
                  <div class="form-group">
                  <label class="control-label col-md-3" style="font-size:15px;color:black">Host</label>
                  <div class="col-md-3 col-xs-11">
                    <input class="form-control form-control-inline " size="16" style="width:293px" type="text" name="host"  value="{{host}}"required autofocus>
                    
                  </div>
                </div> 
                  
                  

 






                    

         
             <a data-toggle="modal" href="login.html#myModal" > <button class="btn btn-success" href="index.html"     style="margin-left:207px;" type="submit"  >Test serveur</button></a>
             <a href="" > <button class="btn btn-warning" href="index.html"      type="submit">Ajouter</button></a>

              
              </form>
            </div> 
            <!-- /form-panel -->
          </div>
          <!-- /col-lg-12 -->
        </div>
               


  <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
          <div class="modal-dialog">
            <div class="modal-content">
            
              <div class="modal-header" style="background: #5CB85C">
              
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Tester la connexion SMTP </h4>
              </div>
              <div class="modal-body">
                <p>Veuillez entrer votre adresse e-mail pour tester la connexion du serveur smtp.</p>
              </div>
              <div class="modal-footer">
              
                <form method="post" action="{{path('testserver')}}">
                <input type="text" name="email" placeholder="Email" autocomplete="off" class="form-control placeholder-no-fix" required autofocus>
              
 
                 <button data-dismiss="modal" class="btn btn-default" type="button" style="margin-top:10px">Annuler</button>
                <button class="btn btn-theme" type="submit" style="margin-top:10px;background:#5CB85C;border-color:#5CB85C">Envoyer</button>
                 </form>
              </div>
             
            </div>
          </div>
        </div>
 
 
